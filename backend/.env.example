# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
API_VERSION=/api/v1

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGODB_URI=mongodb://localhost:27017/skillverse
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/skillverse

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_min_32_characters
JWT_REFRESH_EXPIRE=30d
JWT_COOKIE_EXPIRE=7

# ============================================
# STRIPE PAYMENT GATEWAY
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYMENT_SUCCESS_URL=http://localhost:3000/payment/success
PAYMENT_CANCEL_URL=http://localhost:3000/payment/cancel

# ============================================
# EMAIL CONFIGURATION (Gmail Example)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=SkillVerse <noreply@skillverse.com>

# ============================================
# CLOUDINARY (FILE UPLOAD)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# FILE UPLOAD LIMITS
# ============================================
MAX_FILE_SIZE=10485760
MAX_VIDEO_SIZE=104857600
UPLOAD_PATH=./uploads

# ============================================
# FRONTEND URL
# ============================================
FRONTEND_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# ============================================
# AI/ML RECOMMENDATION SERVICE
# ============================================
AI_SERVICE_URL=http://localhost:8000
OPENAI_API_KEY=sk-your_openai_api_key
AI_MODEL=gpt-3.5-turbo

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret_key

# ============================================
# SOCKET.IO CONFIGURATION
# ============================================
SOCKET_PORT=5001
SOCKET_CORS_ORIGIN=http://localhost:3000

# ============================================
# VIDEO STREAMING (Optional - Agora/Twilio)
# ============================================
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_API_KEY=your_twilio_api_key
TWILIO_API_SECRET=your_twilio_api_secret

# ============================================
# REDIS (Optional - for caching)
# ============================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000

# ============================================
# CERTIFICATE GENERATION
# ============================================
CERTIFICATE_TEMPLATE_PATH=./templates/certificate.html
CERTIFICATE_STORAGE_PATH=./uploads/certificates

# ============================================
# GAMIFICATION
# ============================================
POINTS_PER_COURSE_COMPLETION=100
POINTS_PER_QUIZ_PASS=50
POINTS_PER_SKILL_EXCHANGE=75

# ============================================
# NOTIFICATION SETTINGS
# ============================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
NOTIFICATION_BATCH_SIZE=50