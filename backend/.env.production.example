# Server Configuration
NODE_ENV=production
PORT=5000

# Database (MongoDB Atlas Production)
MONGODB_URI_PROD=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/skillverse?retryWrites=true&w=majority

# JWT Configuration (Use strong random strings)
JWT_SECRET=your-super-secure-random-jwt-secret-min-32-chars
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-different-from-above
JWT_REFRESH_EXPIRE=30d

# Clerk Authentication (Production Keys)
CLERK_SECRET_KEY=sk_live_xxxxxxxxxx
CLERK_PUBLISHABLE_KEY=pk_live_xxxxxxxxxx

# Stripe Payments (Production Keys)
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxx

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=SkillVerse <noreply@skillverse.com>

# Frontend URLs (Update with your domain)
FRONTEND_URL=https://your-domain.com
CLIENT_URL=https://your-domain.com
CORS_ORIGIN=https://your-domain.com

# Video Conferencing (Agora)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-certificate

# AI Service (OpenAI)
OPENAI_API_KEY=sk-xxxxxxxxxx
AI_MODEL=gpt-3.5-turbo

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
